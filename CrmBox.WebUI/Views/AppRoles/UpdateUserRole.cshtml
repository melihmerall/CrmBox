@using Microsoft.AspNetCore.Mvc.Localization
@model AddRoleVM
@inject IViewLocalizer localizer
<form method="post" asp-action="UpdateUserRole" asp-controller="AppRoles">
    @Html.HiddenFor(x => x.Id)
    <div class="card card-primary m-3" />
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@localizer["Rol Güncelle"]</h3>
        </div>
        <div class="card-body" style="display: block;">

            <div class="form-group">
                <label asp-for="Name">@localizer["Rol Adı"]</label>
                <input type="text" asp-for="Name" class="form-control" placeholder=@localizer["Rol Adı"]>
                <span class="bg-danger" asp-validation-for="Name"></span>
            </div>


        <div class="card-footer">
            <a asp-action="GetAllUserRoles" asp-controller="AppRoles" class="btn btn-secondary col-2">@localizer["Geri Dön"]</a>
            <button type="submit" class="btn btn-success col-2 float-right">@localizer["Rol Güncelle"] </button>
        </div>
    </div>
</form>