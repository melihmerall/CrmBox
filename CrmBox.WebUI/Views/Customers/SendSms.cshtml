@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SendSmsVM
@inject IViewLocalizer localizer
<form method="post" asp-action="SendSms" asp-controller="Customers">
    <div class="card card-primary m-3">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@localizer["Sms Gönder"]</h3>
            </div>

            <div class="card-body" style="display: block;">
                <div class="form-group">
                    <label asp-for="MessageBody">@localizer["Mesaj"]</label>
                    <input asp-for="MessageBody" placeholder="@localizer["Mesaj"]" type="text" class="form-control" />
                    <span class="bg-danger" asp-validation-for="MessageBody"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber">@localizer["Telefon Numarası"]</label>
                    <input asp-for="PhoneNumber"  placeholder="@localizer["Telefon Numarası"]" type="text" class="form-control" />
                    <span class="bg-danger"  asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
            <div class="card-footer">

                <a asp-action="SendSms" asp-controller="Customers" class="btn btn-secondary col-2">@localizer["Geri Dön"]</a>
                <button type="submit" class="btn btn-success col-2 float-right">@localizer["Sms Gönder"] </button>
            </div>
        </div>
    </div>
</form>
