@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/PhoneNumbers/GetAll/" class="brand-link">
        <span class="brand-text font-weight-light">Phone<span class="text-bold">Box</span></span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                <li class="nav-item">
                    <a asp-action="GetAllCustomers" asp-controller="Customers" class="nav-link">
                        <i class="nav-icon fas fa-phone"></i>
                        <p>
                            @localizer["Müşteriler"]
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="GetAllUserRoles" asp-controller="AppRoles" class="nav-link">
                        <i class="nav-icon fas fa-crown"></i>
                        <p>
                            @localizer["Roller"]
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="GetAllUsers" asp-controller="AppUsers" class="nav-link">
                        <i class="nav-icon fas fa-crown"></i>
                        <p>
                            @localizer["Kullanıcılar"]
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="Chat" asp-controller="Chat" class="nav-link">
                        <i class="nav-icon fas fa-crown"></i>
                        <p>
                            @localizer["Mesajlaşma Odası"]
                        </p>
                    </a>
                </li>
                
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->


</aside>