@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-action="GetAllCustomers" asp-controller="Customers" class="nav-link">@localizer["Ana Sayfa"]</a>
        </li>
         @if(Context.Session.GetString("username")!=null)
        {
            <li class="nav-item d-none d-sm-inline-block">
                <a  class="nav-link"><i class="fas fa-user "> @Context.Session.GetString("username") Giriş Yaptı.</i></a>
            </li>

        }

        <li class="nav-item d-none d-sm-inline-block m-2">
            <partial name="_Culture" />
        </li>

        <li class="nav-item d-none d-sm-inline-block">
            <a asp-action="LogOut" asp-controller="Auth" class="nav-link">@localizer["Çıkış"]</a>
        </li>
       
 
    </ul>
  </nav>
  <!-- /.navbar -->