@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AddUserVM
@inject IViewLocalizer localizer
@*TODO: Bu sayfa Update user eklendikten sonra düzenlenecek *@
<form method="post" asp-action="UpdateUser" asp-controller="AppUsers">
    @Html.HiddenFor(x => x.Id)
    <div class="card card-primary m-3" />
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@localizer["Kullanıcı Güncelle"]</h3>
        </div>
        <div class="card-body" style="display: block;">

            <div class="form-group">
                <label asp-for="UserName">@localizer["Kullanıcı Adı"]</label>
                <input type="text" asp-for="UserName" class="form-control" placeholder="@Model.UserName">
                <span asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="card-body" style="display: block;">

            <div class="form-group">
                <label asp-for="FirstName">@localizer["Adı"]</label>
                <input type="text" asp-for="FirstName" class="form-control" placeholder="@Model.FirstName">
                <span asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="card-body" style="display: block;">

            <div class="form-group">
                <label asp-for="LastName">@localizer["Soyadı"]</label>
                <input type="text" asp-for="LastName" class="form-control" placeholder="@Model.LastName">
                <span asp-validation-for="FirstName"></span>
            </div>

        </div>
        <div class="card-body" style="display: block;">
            <div class="form-group">
                <label asp-for="Email">@localizer["E-Mail"]</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="@Model.Email">
                <span asp-validation-for="Email"></span>
            </div>
        </div>
