@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AddUserVM
@inject IViewLocalizer localizer
@*TODO: Bu sayfa Update user eklendikten sonra düzenlenecek *@
<form method="post" asp-action="UpdateUser" asp-controller="AppUsers">
    @Html.HiddenFor(x => x.Id)
    <div class="card card-primary m-3" />
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@localizer["Kullanıcı Güncelle"]</h3>
        </div>
        <div class="card-body" style="display: block;">
            <div class="form-group">
                <label asp-for="FirstName">@localizer["Adı"]</label>
                <input type="text" asp-for="FirstName" class="form-control" placeholder="@localizer["Adı"]">
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName">@localizer["Soyadı"]</label>
                <input type="text" asp-for="LastName" class="form-control" placeholder="@localizer["Soyadı"]">
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName">@localizer["Kullanıcı Adı"]</label>
                <input type="text" asp-for="UserName" class="form-control" placeholder="@localizer["Kullanıcı Adı"]">
                <span asp-validation-for="UserName"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName">@localizer["E-Mail"]</label>
                <input type="text" asp-for="Email" class="form-control" placeholder="@localizer["E-Mail"]">
                <span asp-validation-for="Email"></span>
            </div>
            
            <div class="card-footer">
                <a asp-action="GetAllUsers" asp-controller="AppUsers" class="btn btn-secondary col-2">@localizer["Geri Dön"]</a>
                
                <button type="submit" class="btn btn-success col-2 float-right">@localizer["Kullanıcı Güncelle"] </button>
            </div>
        </div>
    </div>
</form>