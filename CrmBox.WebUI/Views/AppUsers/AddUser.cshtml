@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AddUserVM
@inject IViewLocalizer localizer
<form method="post" asp-action="AddUser" asp-controller="AppUsers">
    
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@localizer["Kullanıcı Ekle"]</h3>
        </div>

        <div class="card-body" style="display: block;">

 
            <div class="form-group">
                <input type="text" asp-for="FirstName" class="form-control" placeholder="@localizer["Adı"]">
                <span class="bg-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="LastName" class="form-control" placeholder="@localizer["Soyadı"]">
                <span class="bg-danger" asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="UserName" class="form-control" placeholder="@localizer["Kullanıcı Adı"]">
                <span class="bg-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="Password" class="form-control" placeholder="@localizer["Şifre"]">
                <span class="bg-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input type="email" asp-for="Email" class="form-control" placeholder="@localizer["E-Mail"]">
                <span class="bg-danger" asp-validation-for="Email"></span>
            </div>

        </div>

        <div class="card-footer">

            <a asp-action="GetAllUsers" asp-controller="AppUsers" class="btn btn-secondary col-2">@localizer["Geri Dön"]</a>
            <input type="submit" value="@localizer["Kullanıcı Ekle"]" class="btn btn-success col-2 float-right">
        </div>
    </div>
</form>